{
  "name": "inticate-status",
  "description": "Frontend and backend for the Inticate status page.",
  "version": "0.0.1",
  "author": {
    "name": "Inticate Softworks",
    "email": "contact@inticate.com"
  },
  "license": "MIT",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "start": "echo start",
    "dev": "concurrently --raw \"npm run dev:client\" \"npm run dev:server\"",
    "lint": "concurrently --raw \"npm run lint:client\" \"npm run lint:server\"",
    "build": "concurrently --raw \"npm run build:client\" \"npm run build:server\"",
    "start:server": "cd server && tsx dist/src/index.js",
    "dev:server": "cd server && tsx watch src/index.ts",
    "build:server": "cd server && tsc",
    "clean:server": "cd server && rimraf dist",
    "lint:server": "cd server && npx eslint .",
    "start:client": "cd client && npm run start",
    "dev:client": "cd client && npm run dev",
    "build:client": "cd client && npm run build",
    "lint:client": "cd client && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "6.0.1",
    "tsx": "^4.20.6",
    "typescript": "5.9.3"
  }
}
